<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_history_today"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.person.han.freebst.activity.historyToday">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/history_today_spinner"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Spinner
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:entries="@array/month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_today_month"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />

        <Spinner
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:entries="@array/day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/history_today_day"
            android:layout_marginLeft="22dp"
            android:layout_marginStart="22dp" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/history_today_get"
        android:id="@+id/history_today_listview" />

    <Button
        android:text="@string/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/history_today_get"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/history_today_spinner"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
